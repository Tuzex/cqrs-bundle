<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="false" autoconfigure="false" public="false" />

        <service id="Tuzex\Cqrs\CommandBus" alias="Tuzex\Bundle\Cqrs\MessengerCommandBus"/>
        <service id="Tuzex\Bundle\Cqrs\MessengerCommandBus">
            <argument type="service" id="tuzex.cqrs.command_bus"/>
        </service>

        <service id="Tuzex\Cqrs\QueryBus" alias="Tuzex\Bundle\Cqrs\MessengerQueryBus"/>
        <service id="Tuzex\Bundle\Cqrs\MessengerQueryBus">
            <argument type="service" id="tuzex.cqrs.query_bus"/>
        </service>
    </services>
</container>
