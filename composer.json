{
  "name": "tuzex/cqrs-messenger-bundle",
  "description": "Implementation of CQRS (Command Query Responsibility Segregation) based on the Symfony Messenger for Symfony 4.3<",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Edo Barnas",
      "email": "iam@edobarnas.com"
    }
  ],
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Tuzex\\Bundle\\Cqrs\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tuzex\\Bundle\\Cqrs\\Test\\": "tests/src",
      "Tuzex\\Bundle\\Cqrs\\Test\\Hook\\": "tests/hook"
    }
  },
  "require": {
    "php": "^7.4",
    "symfony/framework-bundle": "4.3.*|4.4.*|5.0.*",
    "symfony/messenger": "4.3.*|4.4.*|5.0.*",
    "tuzex/cqrs-pattern": "0.1.*"
  },
  "require-dev": {
    "dg/bypass-finals": "1.1.*",
    "mockery/mockery": "1.3.*",
    "phpstan/phpstan": "0.12.*",
    "phpstan/phpstan-mockery": "0.12.*",
    "phpstan/phpstan-phpunit": "0.12.*",
    "phpunit/phpunit": "9.0.*",
    "symplify/easy-coding-standard": "7.2.*"
  },
  "scripts": {
    "check:composer": "@composer validate --no-check-all --strict",
    "check": [
      "@check:composer"
    ],
    "test:unit": "phpunit -c phpunit.xml tests",
    "test:static": "phpstan analyse tests src -l max -c phpstan.neon",
    "test": [
      "@test:unit",
      "@test:static"
    ],
    "cs": [
      "ecs check src tests --config easy-coding-standard.yml"
    ],
    "cs:fix": [
      "ecs check src tests --config easy-coding-standard.yml --fix",
      "@cs"
    ]
  },
  "scripts-descriptions": {
    "check": "Validate the composer.json file.",
    "test": "Run all unit tests and the static analysis of codes.",
    "cs": "Run coding standards checkers.",
    "cs-fix": "Fix-ups the code in accordance with our coding standards."
  }
}
